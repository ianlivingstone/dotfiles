{
  "permissions": {
    "allow": [
      "Tool:Bash",
      "Tool:Read",
      "Tool:Write",
      "Tool:Edit",
      "Tool:MultiEdit",
      "Tool:Glob",
      "Tool:Grep",
      "Tool:LS",
      "Tool:TodoWrite",
      "Tool:Task",
      "Tool:WebSearch",
      "Tool:WebFetch",
      "Bash:git status*",
      "Bash:git log*",
      "Bash:git diff*",
      "Bash:git add*",
      "Bash:~/.claude/commands/*",
      "Bash:COMMIT_FILE=*",
      "Bash:echo*",
      "Bash:wc -l*"
    ],
    "deny": [
      "Bash:git commit*--no-gpg-sign*",
      "Bash:git commit*-n*"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claude_hooks/bin/whitespace-cleaner",
            "description": "Process file writes and remove trailing whitespace"
          }
        ]
      }
    ]
  }
}
