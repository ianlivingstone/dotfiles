{
  "permissions": {
    "allow": [
      "tool:Bash",
      "tool:Read",
      "tool:Write",
      "tool:Edit",
      "tool:MultiEdit",
      "tool:Glob",
      "tool:Grep",
      "tool:LS",
      "tool:TodoWrite",
      "tool:Task",
      "tool:WebSearch",
      "tool:WebFetch",
      "bash:git status*",
      "bash:git log*",
      "bash:git diff*",
      "bash:git add*",
      "bash:~/.claude/commands/*",
      "bash:COMMIT_FILE=*",
      "bash:echo*",
      "bash:wc -l*"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claude_hooks/bin/whitespace-cleaner",
            "description": "Process file writes and remove trailing whitespace"
          }
        ]
      }
    ]
  }
}
