{
  "trusted_tools": [
    "Bash",
    "Read", 
    "Write",
    "Edit",
    "MultiEdit",
    "Glob",
    "Grep",
    "LS",
    "TodoWrite",
    "Task"
  ],
  "trusted_bash_commands": [
    "ls",
    "pwd", 
    "cd",
    "find",
    "grep",
    "cat",
    "head",
    "tail",
    "mkdir",
    "touch",
    "which",
    "command",
    "git status",
    "git log",
    "git diff",
    "git show",
    "git branch",
    "tmux list-*",
    "tmux show-*",
    "tmux source-file",
    "brew list",
    "brew --version",
    "npm list",
    "npm --version",
    "node --version",
    "nvim --version",
    "stow --version",
    "source *",
    "echo *",
    "./dotfiles.sh status",
    "~/tmux.sh get_battery_status"
  ],
  "repository_context": {
    "name": "dotfiles",
    "description": "Personal dotfiles management system using GNU Stow",
    "primary_languages": ["bash", "shell", "lua", "vim"],
    "build_commands": ["./dotfiles.sh status", "./dotfiles.sh install"],
    "test_commands": ["./dotfiles.sh status"],
    "package_managers": ["brew", "stow", "npm", "nvm", "gvm"]
  }
}